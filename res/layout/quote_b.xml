<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".topfivequotes"
    android:background="#ffffff" >
  	
	<RelativeLayout
	                android:id="@+id/quote1"
	                android:layout_width="290dp"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal">   
				    <TextView
				        android:id="@+id/textView"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"	        
				        android:layout_marginTop="5dp"
				        android:layout_marginRight="40dp"
				        android:layout_marginLeft="10dp"	        
				        android:textStyle="bold"
				        android:text="Every year on your birthday, you get a chance to start new."
				        android:textSize="20sp"
				        android:textColor="#5CACEE"
				        android:visibility="visible" />
				    <Button 
				        android:id="@+id/star"
				        android:cropToPadding="true"
				        android:layout_width="40dp"
				        android:layout_height="30dp"
				        android:layout_marginTop="5dp"
				        android:layout_marginRight="10dp"
				        android:layout_marginLeft="-40dp"
				        android:layout_toRightOf="@+id/textView"
				        android:layout_alignParentRight="true"    	        	        	        	        
				        android:background="@drawable/star2" />
				    <TextView
				        android:id="@+id/dash"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="10dp"
				        android:layout_below="@+id/textView"	        
				        android:text="~"
				        android:textSize="20sp"
				        android:textColor="#7D7F94" />
				    <TextView
				        android:id="@+id/label2"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="10dp"	        
				        android:layout_toRightOf="@+id/dash"
				        android:layout_below="@+id/textView"	        
				        android:text="Sammy Hagar"
				        android:textSize="20sp"
				        android:textColor="#7D7F94" />
				    <TextView
				        android:id="@+id/number"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_below="@+id/star"
				        android:layout_toRightOf="@+id/textView"
				        android:layout_marginLeft="-40dp"
				        android:text="2"
				        android:textSize="60sp"/>		    
		    	</RelativeLayout>
</RelativeLayout>

